<%= form_with model: @event do |f| %>
  <%= f.label :event_name %><br/>
  <%= f.text_field :name, autofocus: true, class: 'mb-1 border border-black shadow appearance-none' %><br/>
  <%= f.label :event_date %><br/>
  <%= f.date_field :date, class: 'mb-1 border border-black shadow appearance-none' %><br/>
  <%= f.label :event_time %><br/>
  <%= f.time_field :time, class: 'mb-1 border border-black shadow appearance-none' %><br/>
  <%= f.label :event_location %><br/>
  <%= f.text_field :location, class: 'mb-3 border border-black shadow appearance-none' %><br/>
  <%= f.label :select_invitees %><br/>
  <%= f.collection_select :invitee_list, @users, :id, :name, {}, { multiple: true, size: 3, class: 'border border-black' } %><br/>
  <%= f.submit class: 'bg-gray-300 py-1 px-2 text-sm rounded' %>
<% end %>